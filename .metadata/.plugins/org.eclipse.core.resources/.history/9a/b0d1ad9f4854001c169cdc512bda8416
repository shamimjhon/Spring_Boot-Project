	@RequestMapping("/reportForm")
	public String reportForm() {

		return "user/report";
	}
	
	@PostMapping("/repoortGenerate")
	public String reportGenerate() {
		System.out.println("grandiose report");
		return"user/grandioseDaysDetails";
	}
	
	
}
